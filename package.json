{
  "name": "fe-school-backend",
  "version": "1.0.0",
  "description": "An app for managing music tracks",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "server": "nodemon --watch src/**/*.ts --exec ts-node src/index.ts",
    "client": "npm run dev --prefix ./client",
    "all": "concurrently \"npm run server\" \"npm run client\"",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "knip": "knip",
    "typecheck": "tsc --noEmit",
    "test": "vitest run src/__tests__/health.test.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=verbose",
    "bd:reset": "rm -rf ./data && cp -r ./data-initial ./data",
    "seed": "ts-node src/seed.ts",
    "seed:prod": "node dist/seed.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.1.1",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "fastify": "^5.2.1",
    "pino-pretty": "^13.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitest/coverage-v8": "^3.0.7",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "knip": "^5.46.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vitest": "^3.0.7"
  },
  "engines": {
    "node": ">=v20.13.1",
    "npm": ">=v10.5.2"
  }
}
